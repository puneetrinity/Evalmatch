# EvalMatch Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary PostgreSQL database URL
DATABASE_URL="postgresql://user:password@localhost:5432/evalmatch"

# =============================================================================
# AI PROVIDERS
# =============================================================================

# OpenAI Configuration (Required)
PR_OPEN_API_KEY="sk-your-openai-api-key-here"

# Anthropic Configuration (Optional - for enhanced analysis)
PR_ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"

# Groq Configuration (Optional - for high-speed processing) 
PR_GROQ_API_KEY="gsk_your-groq-api-key-here"

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis Configuration (Optional - improves performance by 50%)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# FIREBASE AUTHENTICATION
# =============================================================================

# Firebase Project Configuration
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id" 
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789012"
VITE_FIREBASE_APP_ID="1:123456789012:web:abcdef123456"

# Firebase Admin SDK (for server-side auth verification)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH="./serviceAccountKey.json"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV="development"
VITE_API_BASE_URL="http://localhost:3000"

# File Upload Settings  
MAX_FILE_SIZE=10485760        # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,docx,txt"

# Security Settings
JWT_SECRET="your-super-secret-jwt-key-here"
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Feature Flags
FEATURE_BIAS_DETECTION=true
FEATURE_INTERVIEW_QUESTIONS=true
FEATURE_BATCH_PROCESSING=true